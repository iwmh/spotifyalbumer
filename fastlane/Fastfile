default_platform(:ios)

platform :ios do
  desc "Fetch signing with match, build IPA, upload to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV.fetch("ASC_KEY_ID"),
      issuer_id: ENV.fetch("ASC_ISSUER_ID"),
      key_content: ENV.fetch("ASC_API_KEY_P8"),
      is_key_content_base64: false
    )

    match(
      type: "appstore",
      git_url: ENV.fetch("MATCH_GIT_URL"),
      readonly: true,
      api_key: api_key
    )

    sh("flutter build ipa --release")

    ipa_path = Dir["build/ios/ipa/*.ipa"].first
    UI.user_error!("No IPA produced at build/ios/ipa/*.ipa") if ipa_path.to_s.empty?

    upload_to_testflight(
      api_key: api_key,
      ipa: ipa_path,
      skip_waiting_for_build_processing: true
    )
  end
end
